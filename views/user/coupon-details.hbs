
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Home</title>
    <link
      rel="stylesheet"
      href="//cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css"
    />
  </head>
  <body>

    <section>
      <div class="container mt-5">
        <div class="mt-5">
          <a href="/admin/add-coupon" class="btn btn-success mb-3">Add New
            Coupon</a>
        </div>
        <table class="table table-hover" id="myTable">
          <thead>
            <tr>
              <th scope="col">No</th>
              <th scope="col">Coupon Name</th>
              <th scope="col">Date</th>
              <th scope="col">Minimum Amount</th>
              <th scope="col">Discount</th>
              <th scope="col">Edit</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            {{#each coupons}}
              <tr>
                <th scope="row">{{addOne @index}}</th>
                <td>{{this.Coupon}}</td>
                <td>{{this.Date}}</td>
                <td>{{this.Amount}}</td>
                <td>{{this.Discount}}</td>
                <td><a
                    href="/admin/edit-coupon/{{this._id}}"
                    class="btn btn-success"
                  >Edit</a>
                </td>
                <td><a
                    href="/admin/delete-coupon/{{this._id}}"
                    class="btn btn-danger delete"
                  >Delete</a></td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </section>
    <script
      src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"
    ></script>
    <script
      src="//cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"
    ></script>
    <script>
      $(document).ready( function () { $('#myTable').DataTable(); } );
    </script>
  </body>
</html>

<script>
  $(".delete").on("click",function(e){ e.preventDefault() var self=$(this)
  Swal.fire({ title: 'Do you want to delete this coupon?', text: "You won't be
  able to revert this!", icon: 'warning', showCancelButton: true,
  confirmButtonColor: '#3085d6', cancelButtonColor: '#d33', confirmButtonText:
  'Yes, delete it!' }).then((result) => { if (result.isConfirmed) {
  location.href=self.attr("href") } }) })

</script>