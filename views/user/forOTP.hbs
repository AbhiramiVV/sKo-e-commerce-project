    <form action="/getotp" method="post">
      <div class="container height-50 d-flex justify-content-center align-items-center" style="margin-top: 15rem;" >
      <div class="position-relative">
        <div style="margin-top: -250px;" class="card p-3 text-center">
            <h4>OTP Verification</h4>
          <h6>Please enter the one time password <br />to verify your account</h6>
          <p id="countdown"></p>
          <div>
            <span>A code has been sent to your number</span> <small></small>
          </div>
          <div
            id="otp"
            class="inputs d-flex flex-row justify-content-center mt-2">
            <input class="m-2 text-center form-control rounded" type="text" id="first" name="otp" /> </div>
          <div class="mt-4">
            <button class="btn btn-danger px-4 validate">Verify</button>
          </div>
        </div>
      </div>
    </div>
    </form>
    <script>
        let countdown=document.getElementById("countdown");
        let count=61;
        const coundownInterval = setInterval(() => {
          count--;
          countdown.innerText=" OTP Resend in "+count;
          checkOver()
        }, 1000);
        function checkOver(){
          if(count==0){
            clearInterval(coundownInterval)
            countdown.innerHTML=`
            <span  onclick="window.location.reload()">Resend OTP</span>
            `
          }
        }
      </script>

