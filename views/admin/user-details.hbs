 <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>
<body>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/admin">Admin Dashboard</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/admin/product-details">All Products</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/user-details">All Users</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/categories">All Categories</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/admin-orders">All Orders</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/coupon-details">All Coupons</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/sales-report">All Sales</a>
          </li>
          <a class="nav-link" href="/admin/login">Logout</a>
        </ul>
      </div>
    </nav>
       
    <section>
      <div class="container mt-5">

        <table class="table table-hover border" id="myTable">
          <thead>
            <tr>
              <th scope="col" class="border-dark">SI NO</th>
              <th scope="col" class="border-dark">Name</th>
              <th scope="col" class="border-dark">Email</th>
              <th scope="col" class="border-dark">Number</th>
              <th scope="col" class="border-dark"></th>
            </tr>
          </thead>
          <tbody>
            {{#each users}}
              <tr>
                <th scope="row" class="border-dark">{{inc @index}}</th>
                <td class="border-dark">{{this.Name}}</td>
                <td class="border-dark">{{this.Email}}</td>
                <td class="border-dark">{{this.Number}}</td>
                <td class="border-dark">
                  {{#if this.Access}}
                    <a href="/admin/block-user/{{this._id}}" class="btn btn-danger">Block</a>
                  {{else}}
                    <a href="/admin/unblock-user/{{this._id}}" class="btn btn-dark" >Unblock</a>
                  {{/if}}
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </section>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="//cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script>
      $(document).ready( function () { $('#myTable').DataTable(); } );
    </script>
